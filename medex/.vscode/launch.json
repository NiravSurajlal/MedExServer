        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Django MGMT Command",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            // "program": "manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
            ]
        },
        {
            "name": "Django Testing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            // "program": "manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
            ]
        },        
    ]
